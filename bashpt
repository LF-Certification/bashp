set -eo pipefail

functionName=${1:?function to be tested must be set}
path=libs/${functionName//::/\/}
testPath=$(dirname "$path")/tests/${functionName##*::}
testFunction=${functionName%::*}::tests::${functionName##*::}::test

if [[ -d "$testPath" && -f "$testPath/test" ]]; then
  test=$(bashpc <<<"set -euo pipefail; $testFunction") || {
    echo "â›” Failed to prepare test script for '$testFunction'" >&2
    exit 2
  }

  returnCode=0
  if [[ "${BASHPT_LOCAL:-false}" == "true" ]]; then
    # Run tests locally
    bash -c "$test" || returnCode=$?
  else
    # Run tests in Docker container
    arguments=(--rm)

    # Only add -ti if we have a TTY (not in CI)
    if [ -t 0 ]; then
      arguments+=(-ti)
    fi

    image="${BASHPT_IMAGE:-ubuntu:latest}"

    # Add user override if specified
    if [[ -n "${BASHPT_USER:-}" ]]; then
      arguments+=(-u "$BASHPT_USER")
    fi

    docker run "${arguments[@]}" "$image" bash -c "$test" || returnCode=$?
  fi

  if [[ $returnCode -eq 0 ]]; then
    echo "âœ… All assertions passed: '$testFunction' passed"
    exit 0
  else
    echo "â›” Some assertions failed: '$testFunction' failed" >&2
    exit 1
  fi
else
  echo "ðŸš« No test $testFunction defined for $functionName, skipping."
  exit 127
fi
